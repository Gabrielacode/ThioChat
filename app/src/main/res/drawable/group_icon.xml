<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id = "@+id/unchecked" android:state_checked="false" android:drawable="@drawable/groups_light"/>
    <item android:id ="@+id/checked"  android:state_checked="true" android:drawable="@drawable/groups_active"/>
