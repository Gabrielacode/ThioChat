<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id ="@+id/not_pressed" android:drawable="@drawable/send"/>
    <item android:id ="@+id/pressed" android:drawable="@drawable/send_animated"/>
    <transition
        android:fromId="@id/not_pressed"
        android:toId="@id/pressed" android:drawable="@drawable/send_animated" android:reversible="false"/>
</animated-selector>